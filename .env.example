# Database
DATABASE_URL="file:./prisma/dev.db"

# LLM Provider
# LLM_BASE_URL and LLM_API_KEY configure any OpenAI-compatible endpoint (e.g. claude-max-api-proxy).
# Falls back to OPENAI_API_KEY / OPENAI_MODEL if the LLM_* vars are unset.
LLM_BASE_URL=http://localhost:3456/v1
LLM_MODEL=claude-opus-4-6
LLM_API_KEY=not-needed

# OpenAI (legacy fallback — used when LLM_* vars are unset)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o

# MCP Server
MCP_PORT=3001
MCP_URL=http://localhost:3001/mcp

# NextAuth
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-here

# Seed secret — required in production to protect the /api/data/seed endpoint
SEED_SECRET=

# Allowed origins — comma-separated list of origins for CORS (required in production)
# In development, defaults to http://localhost:3000,http://localhost:3001
ALLOWED_ORIGINS=
