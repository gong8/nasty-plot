{
  "name": "nasty-plot",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.29.2",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently -n next,mcp,proxy -c blue,green,magenta \"turbo dev\" \"pnpm run dev:mcp\" \"pnpm run dev:proxy\"",
    "build": "turbo build",
    "lint": "turbo lint",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "seed": "pnpm --filter @nasty-plot/data-pipeline run seed",
    "dev:mcp": "pnpm --filter @nasty-plot/mcp-server run dev",
    "dev:proxy": "bash scripts/dev-proxy.sh",
    "dev:all": "concurrently -n next,mcp,proxy -c blue,green,magenta \"pnpm run dev\" \"pnpm run dev:mcp\" \"pnpm run dev:proxy\"",
    "db:generate": "prisma generate && echo '{\"type\":\"module\"}' > generated/prisma/package.json",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:clean": "pnpm --filter @nasty-plot/data-pipeline run clean",
    "format": "prettier --write .",
    "check": "pnpm check:format && pnpm check:quality && pnpm check:lint && pnpm check:types && pnpm test",
    "check:format": "prettier --check .",
    "check:lint": "turbo lint",
    "check:quality": "node scripts/check-quality.mjs",
    "check:types": "turbo typecheck"
  },
  "dependencies": {
    "@prisma/client": "^7.3.0",
    "prisma": "^7.3.0"
  },
  "devDependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@pkmn/dex": "^0.10.6",
    "@pkmn/sim": "^0.10.6",
    "@vitest/coverage-v8": "^4.0.18",
    "concurrently": "^9.2.1",
    "prettier": "^3.8.1",
    "turbo": "^2.0.0",
    "typescript": "^5",
    "vitest": "^4.0.18"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@prisma/engines",
      "better-sqlite3",
      "esbuild",
      "prisma",
      "sharp",
      "unrs-resolver"
    ]
  }
}
